                </div>
            </div>
            <% if (userAddress && userAddress.details && userAddress.details.length> 0) { %>
                <div id="address-body">
                    <% userAddress.details.forEach(element=> { %>
                        <div class="row mb-3" id="address-col-<%= element._id%>">
                            <div class="col-lg-4">
                                <div class="card mb-3 mb-lg-0">
