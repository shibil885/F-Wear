<% if(product) { %>
<section class="py-5">
   <div class="container">
      <div class="row gx-5">
         <aside class="col-lg-6">
            <div class="border rounded-4 mb-3 d-flex justify-content-center">
               <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image">
               <img style="max-width: 100%; max-height: 70vh; margin: auto;" class="rounded-4 fit"
                  src="/<%= product.images[0] %>" alt="Product Image" />
               </a>
            </div>
            <div class="d-flex justify-content-center mb-3">
               <% product.images.forEach(element=> { %>
               <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image"
                  class="item-thumb">
               <img width="200" class="rounded-2" src="/<%=element%>" alt="Thumbnail Image" />
               </a>
               <% }) %>
            </div>
         </aside>
         <main class="col-lg-6">
            <div class="ps-lg-3">
               <h4 class="title text-dark">
                  <%= product.product_title %>
               </h4>
               <div class="mb-3">
                  <span class="h5"><b> &#8377;</b>
                  <%=product.price %>
                  </span>
               </div>
               <p>
                  <%= product.description %>
               </p>
               <hr />
               <% if (product.stock===0) { %>
               <button class="btn btn-secondary shadow-0" disabled>
               <i class="me-1 fa fa-shopping-basket"></i> Out of stock
               </button>
               <% } else { %>
               <button class="btn btn-primary shadow-0" onclick="addToCart('<%= product._id %>')">
               <i class="me-1 fa fa-shopping-basket"></i> Add to cart
               </button>
               <% } %>
               <a class="btn btn-dark border border-secondary py-2 icon-hover px-3 ms-2"
                  onclick="addToWishlist('<%= product._id %>')">
               <i class="me-1 fa fa-heart"></i> Save
               </a>
            </div>
         </main>
      </div>
   </div>
</section>
<% } else { %>
<h1 class="text-center text-secondary mt-5">The product not available yet</h1>
<% } %>
