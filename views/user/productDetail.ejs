<script>
   function addToCart(id) {
     fetch(`/cart/${id}`, {
       method: "PATCH",
       headers: {
         'Content-Type': 'application/json',
         'Accept': 'application/json'
       },
     }).then(res => res.json())
       .then(res => {        
         if (res.status == 401) {
           Swal.fire({
             icon: "warning",
             title: res.statusText,
             text: 'Please sign in to add to cart.',
             draggable: true,
           });
         } else {
          document.getElementById('cartItemCount').innerHTML = res.totalItems
           Swal.fire({
             position: "top-end",
             icon: res.icon,
             title: res.message,
             showConfirmButton: false,
             draggable: true,
             timer: 1700
           });
         }
       })
       .catch(error => {
         Swal.fire({
           position: "top-end",
           icon: "error",
           title: "Oops...",
           text: "Something went wrong!",
           timer: 1700,
           draggable: true,
   
         });
       })
   }
   function addToWishlist(id) {
     fetch(`/wishlist/${id}`, {
       method: "PATCH",
       headers: {
         'Content-Type': 'application/json',
         'Accept': 'application/json'
       },
     }).then(res => res.json())
       .then(res => {
