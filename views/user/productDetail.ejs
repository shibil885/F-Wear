             title: res.statusText,
             text: 'Please sign in to add to the wishlist.',
             draggable: true,
           });
         } else {
           Swal.fire({  
             position: "top-end",
             icon: res.icon,
             title: res.message,
             showConfirmButton: false,
             draggable: true,
             timer: 1700
