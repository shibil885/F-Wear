                      class="btn btn-sm btn-action <%= row.isBlocked ? 'btn-outline-success' : 'btn-outline-danger' %>"
                      id="user-btn-<%= row._id %>" data-id="<%= row._id %>" data-status="<%= row.isBlocked %>"
