      <div class="card mb-4">
        <div class="card-body">
          <% if (userOrder && userOrder.length> 0) { %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>#ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Total</th>
                    <th scope="col">Date</th>
                    <th scope="col" class="text-end"> Action </th>
                  </tr>
                </thead>

                <tbody>
                  <% userOrder.forEach(order=> { %>
                    <tr>
                      <td>
                        #<%= order._id %>
                      </td>
                      <td>
                        <%= order.firstName %>
                          <%= order.lastName %>
                      </td>
                      <td>₹ <%= order.totalPrice %>
                      </td>
                      <td>
                        <%= order.date.toDateString() %>
                      </td>
                      <td class="text-end">
                        <a href="/userOrderDetails/<%= order._id %>" class="btn btn-md rounded font-sm">Detail</a>
                        <!-- ... (other actions) ... -->
                      </td>
                    </tr>
                    <% }) %>
                </tbody>

              </table>
            </div>
            <% } else { %>
              <p class="text-secondary">0 orders</p>
              <% } %>
        </div> <!-- card-body end// -->
