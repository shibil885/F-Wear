        <script>
            async function unListBrand(brandId) {
                const result = await Swal.fire({
                    title: "Are you sure?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes"
                });

                if (result.isConfirmed) {
                    try {
                        const response = await fetch(`/unListBrand/${brandId}`, {
                            method: 'PATCH',
                            headers: { 'Content-Type': 'application/json' }
                        });

                        if (response.ok) {
                            Swal.fire({
                                title: "Unlisted!",
                                text: "the brand has been unlisted.",
                                icon: "success",
                                showConfirmButton: false
                            });
                            setTimeout(() => {
                                location.reload();
                            }, 2000);
                        } else {
                            throw new Error('Network response was not ok.');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        await Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Something went wrong!",
                            showConfirmButton: false
                        });
                        setTimeout(() => {
                            location.reload();
                        }, 2000);
                    }
                }
            }
            async function listBrand(brandId) {
                const result = await Swal.fire({
                    title: "Are you sure?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes"
                });

                if (result.isConfirmed) {
                    try {
                        const response = await fetch(`/listBrand/${brandId}`, {
                            method: 'PATCH',
                            headers: { 'Content-Type': 'application/json' }
                        });

                        if (response.ok) {
                            Swal.fire({
                                title: "listed!",
                                text: "The brand has been listed.",
                                icon: "success",
                                showConfirmButton: false
                            });
                            setTimeout(() => {
                                location.reload();
                            }, 2000);
                        } else {
                            throw new Error('Network response was not ok.');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        await Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Something went wrong!",
                            showConfirmButton: false
                        });
                        setTimeout(() => {
                            location.reload();
                        }, 2000);
                    }
                }
            }


        </script>
