    <script>
      async function toggleCategoryList(currentStatus, categoryId) {
        const isList = !currentStatus;

        const result = await Swal.fire({
          title: "Are you sure?",
          text: isList ? "You want to list this category?" : "You want to unlist this category?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: isList ? "List" : "Unlist"
        });

        if (!result.isConfirmed) return;

        try {
          const response = await fetch(`/category/${categoryId}`, {
            method: 'PATCH',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ isList })
          });

          if (!response.ok) throw new Error("Failed to update");

          const data = await response.json();

          await Swal.fire({
            icon: "success",
            title: data.message,
            showConfirmButton: false,
            timer: 1500
          });

          // DOM Update
          const statusCell = document.getElementById(`status-${categoryId}`);
          const actionCell = document.getElementById(`action-${categoryId}`);

          if (statusCell) {
            statusCell.innerHTML = `
          <span class="${isList ? 'text-success' : 'text-danger'}">
            ${isList ? 'List' : 'Unlist'}
          </span>`;
          }

          if (actionCell) {
            actionCell.innerHTML = `
          <a href="#" class="badge badge-pill alert-${isList ? 'danger' : 'success'}"
             onclick="toggleCategoryList(${isList}, '${categoryId}')">
            ${isList ? 'Unlist' : 'List'}
          </a>`;
          }

        } catch (error) {
          console.error(error);
          await Swal.fire({
            icon: "error",
            title: "Oops...",
            text: "Something went wrong!"
          });
        }
      }
    </script>

